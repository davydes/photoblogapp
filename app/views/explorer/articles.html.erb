<% if "articles".eql?(action_name) %>
  <% page_title = t 'articles.label.articles' %>
<% elsif "articles_in_sandbox".eql?(action_name) %>
  <% page_title =t 'articles.label.sandbox' %>
<% end %>

<%= title (page_title) %>

<div class="container-fluid">
  <h3><%= page_title %></h3>
  <div class="container-fluid">
      <%= render partial: 'articles/article_list', locals: {articles: @articles} %>
  </div>
</div>