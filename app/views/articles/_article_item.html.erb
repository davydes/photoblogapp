<div class="col-6 col-sm-6 col-lg-4 article-preview">
    <h3><%= article.title %></h3>
    <div class="jcarousel">
      <ul>
        <% article.photos.each do |photo| %>
          <li><%= image_tag image_photo_url(photo, :thumb)%></li>
        <% end %>
      </ul>
    </div>
    <div class="preview-text"><%= html_intro_article(article) %></div>
    <div class="more-link"><%= link_to "more", article %></div>
</div>