<div class="container-fluid">
  <% if @drafts && @drafts.any? %>
    <h2><%= t 'articles.label.your_drafts' %></h2>
    <%= render partial: 'articles/article_list', locals: {articles: @drafts} %>
  <% end %>
  <h2>
    <%= current_user?(@owner) ? t('articles.label.your_published')
                              : t('articles.label.articles_of', name: @owner.name) %>
  </h2>
  <%= render partial: 'articles/article_list', locals: {articles: @articles} %>
</div>