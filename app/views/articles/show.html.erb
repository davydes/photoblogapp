<%= title (@article.title) %>

<script type="application/javascript">
    var setMaxArticlePhotoHeight = function() {
        var height = $(window).height()/3;
        $('div.blog-photo-view img.blog-photo-img').each(function () {
            $(this).setHeightAsWindow(height);
        });
    };

    $(document).ready(function () {
        setMaxArticlePhotoHeight();
        $(window).resize(setMaxArticlePhotoHeight);
    });
</script>

<div class="container">
        <h2><%= @article.title %></h2>
        <h5 class="text-right">
          <% if @article.is_draft? %>
            <span class="text-warning"> <%= t 'articles.label.draft_created_at', date: l(@article.created_at, :format => :short) %></span>
          <% else %>
            <%= t 'articles.label.published_by' %> <%= link_to user_title(@article.user), user_path(@article.user) %>
            <%= l @article.when_published, :format => :short %>
          <% end %>
          <% if admin_or_current?(@article.user) %>
              <%= link_to edit_article_path(@article),
                          style: 'font-size: 1.2em; color: green; margin-left: 3px;' do %>
                  <span class='glyphicon glyphicon-edit'></span></a>
              <% end %>
              <%= link_to @article, data: { confirm: "Are you sure?" },
                          :method => "delete", style: 'font-size: 1.2em; color: red; margin-left: 3px;' do %>
                  <span class='glyphicon glyphicon-trash'></span>
              <% end %>
          <% end %>
        </h5>
    <div class="article-text text-justify">
      <%= html_content_article(@article) %>
    </div>
</div>