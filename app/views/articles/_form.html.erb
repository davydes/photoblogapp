<%= form_for([@article.user, @article]) do |f| %>
  <% if @article.errors.any? %>
    <div id="error_explanation">
      <h2><%= t 'activerecord.error', :count => @article.errors.count %></h2>
      <ul>
      <% @article.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="form-group">
    <%= f.label :title, class: 'control-label'%><br>
    <%= f.text_field :title, class: 'form-control' %>
  </div>
  <div class="form-group">
    <%= f.label :content, class: 'control-label' %><br>
    <%= f.text_area :content, class: 'form-control', style: 'resize: vertical;' %>
  </div>
  <div class="form-group">
    <%= f.submit nil, :class => 'btn btn-primary' %>
    <%= f.submit 'Preview', :name => 'preview', :class => 'btn btn-warning' %>
    <%= button_tag 'Close', :class => 'btn btn-danger pull-right' %>
  </div>
<% end %>

<script type="text/javascript">
    var setEditorHeight = function() {
        $('textarea#article_content').each(function () {
            var winHeight = $(window).height()-300;
            $(this).first().css({
                'height' : winHeight + "px"
            });
        });
    };

    $(document).ready(function () {
        setEditorHeight();
        $(window).resize(setEditorHeight);
    });
</script>