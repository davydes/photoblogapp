<div class="modal-dialog">
  <div class="modal-content">
    <div class="modal-header">
      <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
      <h4 class="modal-title">Select Photos</h4>
    </div>
    <div id="photo-browser" class="modal-body">
      <% if photos.count > 0 %>
        <% photos.each do |photo| %>
          <%= image_tag image_photo_url(photo, :thumb), id: photo_id(photo) %>
        <% end %>
      <% end %>
    </div>
    <div class="modal-footer">
      <button type="button" class="pull-left btn btn-primary" data-dismiss="modal">Ok</button>
      <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
    </div>
  </div>
</div>