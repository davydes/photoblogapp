<% modal ||= false %>
<% remote = modal ? true : false %>

<%= form_for(@photo, remote: remote, html: {class: "form-horizontal", role: :form, 'data-model' => 'photo', id: 'photo-form'}) do |f| %>
  <div class="form-group">
    <%= f.label :title, class: 'control-label col-sm-2' %>
    <div class="col-sm-10">
      <%= f.text_field :title, class: 'form-control', maxlenght: Photo::VALIDATION_MAX_TITLE %>
      <span class="help-block"></span>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :description, class: 'control-label col-sm-2' %>
    <div class="col-sm-10">
      <%= f.text_area :description, class: 'form-control', style: 'resize: vertical;', maxlenght: Photo::VALIDATION_MAX_DESCRIPTION %>
      <span class="help-block"></span>
    </div>
  </div>
  <div class="form-group">
    <div class="col-sm-2"></div>
    <div class="col-sm-10">
      <%= f.submit nil, class: 'btn btn-primary' %>
    </div>
  </div>
<% end %>