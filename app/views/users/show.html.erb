<%= provide(:title, @user.name) %>
<%- model_class = User -%>
<div class="page-header">
  <h1><%=t '.title', :default => model_class.model_name.human.titleize %> "<%=@user.name%>"</h1>
</div>

<dl class="dl-horizontal">
  <dt></dt>
  <dd><%= image_tag @user.avatar.url(:original) %></dd>
  <dt><strong><%= model_class.human_attribute_name(:name) %>:</strong></dt>
  <dd><%= @user.name %></dd>
  <dt><strong><%= model_class.human_attribute_name(:email) %>:</strong></dt>
  <dd><%= @user.email %></dd>
  <dt><strong><%= Article.model_name.human.titleize %>:</strong></dt>
  <dd><%= @user.articles.count %></dd>
</dl>