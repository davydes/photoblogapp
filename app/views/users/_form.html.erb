<% content_for :head do %>
    <%= javascript_include_tag 'custom/fileinput', 'data-turbolinks-track' => true %>
    <%= stylesheet_link_tag 'custom/fileinput', 'data-turbolinks-track' => true %>
<% end %>

<%= form_for @user, :html => { :class => "form-horizontal user" } do |f| %>

  <% if @user.errors.any? %>
    <div id="error_expl" class="panel panel-danger">
      <div class="panel-heading">
        <h3 class="panel-title">
          <%= t('activerecord.error', :count => @user.errors.count) %>
        </h3>
      </div>
      <div class="panel-body">
        <ul>
        <% @user.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
        </ul>
      </div>
    </div>
  <% end %>

  <div class="control-group" style="max-width: 318px; margin: 0 auto">
    <%= f.label t('users.name'), :class => 'control-label' %>
    <div class="controls">
      <%= f.text_field :name, :class => 'form-control' %>
    </div>
    <%= f.label t('users.email'), :class => 'control-label' %>
    <div class="controls">
      <%= f.text_field :email, :class => 'form-control' %>
    </div>
    <%= f.label t('users.password'), :class => 'control-label' %>
    <div class="controls">
      <%= f.password_field :password, :class => 'form-control' %>
    </div>
    <%= f.label t('users.password_confirmation'), :class => 'control-label' %>
    <div class="controls">
      <%= f.password_field :password_confirmation, :class => 'form-control' %>
    </div>
    <%= f.label :avatar, "Avatar", :class => 'control-label'%>
    <div class="control">
      <%= f.file_field :avatar, id: 'input-avatar'%>
    </div>
    <%= (recaptcha_tags display: { theme: 'white' }, :ajax => :true) if (mode == 'create') %>
    <%= f.submit nil, :class => 'btn btn-primary form-control', :style => "margin: 5px 0" %>
  </div>

  <script type="text/javascript">
    /* Initialize your widget via javascript as follows */
    $(document).ready(function () {
      $("#input-avatar").fileinput({
          browseClass: "btn btn-primary btn-block",
          showCaption: false,
          showRemove: false,
          showUpload: false,
          maxFileSize: 1024
      });
    });
  </script>

<% end %>
