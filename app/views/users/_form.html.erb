<%= form_for @user, :html => { :class => "form-horizontal user" } do |f| %>

  <% if @user.errors.any? %>
    <div id="error_expl" class="panel panel-danger">
      <div class="panel-heading">
        <h3 class="panel-title">
          <%= @user.errors.count.to_s+' '+Russian::pluralize(@user.errors.count, "ошибку", "ошибки", "ошибок") %> необходимо исправить:
        </h3>
      </div>
      <div class="panel-body">
        <ul>
        <% @user.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
        </ul>
      </div>
    </div>
  <% end %>

  <div class="control-group" style="width: 300px; margin: 0 auto">
    <%= f.label t('users.name'), :class => 'control-label' %>
    <div class="controls">
      <%= f.text_field :name, :class => 'form-control' %>
    </div>
    <%= f.label t('users.email'), :class => 'control-label' %>
    <div class="controls">
      <%= f.text_field :email, :class => 'form-control' %>
    </div>
    <%= f.label t('users.password'), :class => 'control-label' %>
    <div class="controls">
      <%= f.password_field :password, :class => 'form-control' %>
    </div>
    <%= f.label t('users.password_confirmation'), :class => 'control-label' %>
    <div class="controls">
      <%= f.password_field :password_confirmation, :class => 'form-control' %>
    </div>

    <%= f.submit nil, :class => 'btn btn-primary form-control', :style => "margin: 5px 0" %>
  </div>

<% end %>
