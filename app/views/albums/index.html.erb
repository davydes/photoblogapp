<div class="container-fluid">
  <% if admin_or_current?(@owner) %>
    <div class="span7 text-center">
      <%= link_to 'New', new_user_album_path(current_user), :class => 'btn btn-primary btn-lg' %>
    </div>
  <% end %>

  <% @albums.each do |album| %>
    <%= album.title %>
    <% if admin_or_current?(@owner) %>
      <%= link_to 'Show', user_album_path(album.user, album) %>
      <%= link_to 'Edit', edit_user_album_path(album.user, album) %>
      <%= link_to 'Destroy', user_album_path(album.user, album), method: :delete, data: { confirm: 'Are you sure?' } %>
    <% end %>
  <% end %>
</div>