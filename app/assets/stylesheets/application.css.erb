#logo-icon {
  background: url(<%= asset_path 'camera-lens-icon-43px.png' %>) 100% 100% no-repeat;
  width: 43px;
  height: 43px;
  float: left;
  margin: 1px 0;
}

/* footer */

footer {
  margin-top: 45px;
  padding-top: 5px;
  border-top: 1px solid #fafafa;
}

footer small {
  float: left;
}

footer ul {
  float: right;
  list-style: none;
  maring: 0;
  padding: 0;
}

footer ul li {
  float: left;
  margin-left: 10px;
}

.file-input .file-preview .close {
  color: #888;
  opacity: 1;
}

#panel-avatar {
  margin: -6px 5px 0 0;
  width: 32px;
  height: 32px;
  overflow: hidden;
  float:left;
}

#recaptcha_area {
  margin-top: 10px;
}