body { min-width: 300px }

a, a:hover, a:active, a:focus {
    outline: 0;
}

#logo-icon {
  background: url(<%= asset_path 'camera-lens-icon.png' %>) 100% 100% no-repeat;
  width: 48px;
  height: 48px;
  float: left;
  margin: 0 10px;
}

/* footer */

footer {
  margin-top: 45px;
  padding-top: 5px;
  border-top: 1px solid @gray-dark;

}

footer a {
  text-decoration: none;
  color: @gray-light;
}

footer a:hover {
  text-decoration: none;
  color: #fff;
}

footer small {
  float: left;
}

footer ul {
  float: right;
  list-style: none;
}

footer ul li {
  float: left;
  margin-left: 10px;
}

div.wrap-user {
  width: 800px;
  margin: auto;
}

pre.debug_dump {
  margin-top: 20px;
}

.selectpicker {
  width: 200px;
}

#loggedin_dropdown {
  padding: 9px 15px;
  height: 50px;
}

.file-input .file-preview .close {
  color: red;
  text-shadow: none;
  opacity: 1;
}

#panel-avatar {
  margin: 0 5px 0 0;
  width: 32px;
  height: 32px;
  background-image: url(<%= asset_path 'avatar.png' %>);
  overflow: hidden;
  float:left;
}

#panel-login {
  float: left;
  height: 32px;
  padding-top: 5px;
}
